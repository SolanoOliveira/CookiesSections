<h1>Cadastrar Novo Departamento</h1>
<form action="/departamentos" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" id="name" name="name" required>
        <div class="invalid-feedback" style="display: block;">{{showError errors 'name'}} </div>
    </div>
    <br>
    <div class="form-group">
        <label for="sigla">Sigla:</label>
        <input type="text" class="form-control" id="sigla" name="sigla" required>
        <div class="invalid-feedback" style="display: block;">{{showError errors 'sigla'}}</div>
    </div>
    <br>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables">Lista de Departamentos</h1>
            </div>

            <div class="bs-component">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Departamento</th>
                            <th scope="col">Sigla</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Excluir</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each departamentos}}
                        <tr>
                            <td>{{this.dataValues.id}}</td>
                            <td>{{this.dataValues.name}}</td>
                            <td>{{this.dataValues.sigla}}</td>
                            <td>
                                <a href="/departamentos/{{this.dataValues.id}}/edit" class="btn btn-primary">Editar</a>
                            </td>
                            <td>
                                <form action="/departamentos/{{this.dataValues.id}}/delete" method="POST" 
                                    onsubmit="return confirm('Tem certeza que deseja excluir este departamento?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_csrf" value="{{../csrf}}">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>